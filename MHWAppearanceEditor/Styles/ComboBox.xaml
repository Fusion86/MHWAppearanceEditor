<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vc="clr-namespace:MHWAppearanceEditor.ValueConverters">

    <Styles.Resources>
        <vc:ImageFromUriValueConverter x:Key="ImageFromUriConverter"/>
    </Styles.Resources>

    <Style Selector="ComboBox.CharaSelect">
        <Setter Property="MaxDropDownHeight" Value="600"/>

        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</Styles>