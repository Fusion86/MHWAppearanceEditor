<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MHWAppearanceEditor.Views.Components.CharacterAssetView">

    <Grid RowDefinitions="Auto, 5, Auto">
        <TextBlock Grid.Row="0" Text="{Binding Name}" HorizontalAlignment="Center"/>
        <Image Grid.Row="2" Source="{Binding PreviewSource, Converter={StaticResource ImageFromUriConverter}}" 
               Stretch="None"/>
    </Grid>
</UserControl>
