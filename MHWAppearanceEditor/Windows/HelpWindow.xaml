<Window x:Class="MHWAppearanceEditor.Windows.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MHWAppearanceEditor.Windows"
        mc:Ignorable="d"
        Title="Help" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderThickness="0,0,0,2" BorderBrush="Gray" Background="WhiteSmoke">
            <TextBlock Grid.Row="0" Padding="5" HorizontalAlignment="Center">
            <Hyperlink NavigateUri="https://fusion86.github.io/MHWAppearanceEditor/" RequestNavigate="Hyperlink_RequestNavigate">
                Click here to view this help page in your browser
            </Hyperlink>
            </TextBlock>
        </Border>

        <WebBrowser Grid.Row="1" Source="https://fusion86.github.io/MHWAppearanceEditor/"/>
    </Grid>
</Window>
