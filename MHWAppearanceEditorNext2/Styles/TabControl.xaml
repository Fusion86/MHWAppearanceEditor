<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=netstandard">

    <Design.PreviewWith>
        <TabControl Width="400" Height="150">
            <TabItem Header="Header 1">
                <Grid Background="Blue"/>
            </TabItem>

            <TabItem Header="Header 2">
                <Grid Background="Red"/>
            </TabItem>
        </TabControl>
    </Design.PreviewWith>

    <Style Selector="TabItem">
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="TabItem:pointerover">
        <Setter Property="Background" Value="{DynamicResource ControlLightDarkBrush}"/>
    </Style>

    <Style Selector="TabItem:selected">
        <Setter Property="Background" Value="{DynamicResource ControlLightDarkBrush}"/>
    </Style>

    <Style Selector="TabItem:selected:focus">
        <Setter Property="Background" Value="{DynamicResource ControlLightDarkBrush}"/>
    </Style>

    <Style Selector="TabItem:selected:pointerover">
        <Setter Property="Background" Value="{DynamicResource ControlLightDarkBrush}"/>
    </Style>

    <Style Selector="TabItem:selected:focus:pointerover">
        <Setter Property="Background" Value="{DynamicResource ControlLightDarkBrush}"/>
    </Style>

</Styles>