<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MHWAppearanceEditor.Views.FirstRunView">

    <StackPanel Width="800" VerticalAlignment="Center" Spacing="10">
        <StackPanel.Styles>
            <Style Selector="TextBlock">
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
        </StackPanel.Styles>

        <StackPanel>
            <TextBlock Text="First Run" FontSize="18"/>
            <TextBlock Text="It looks like this is the first time you open MHWAppearanceEditor, please take 5 seconds of your time to read the short instructions below."/>
        </StackPanel>

        <StackPanel>
            <TextBlock Text="How to use" FontWeight="Bold"/>
            <TextBlock Text="1. Make sure Monster Hunter World is closed."/>
            <TextBlock Text="2. Select your SaveData in this tool and change whatever you want."/>
            <TextBlock Text="3. Click the save button in the top left to apply your changes."/>
            <TextBlock Foreground="Orange" Text="4. Make sure the SaveCheckBypass is enabled before starting Monster Hunter World"/>
            <TextBlock Foreground="Orange" Text="5. Keep MHWAppearanceEditor open until the game has started (in main menu)"/>
        </StackPanel>

        <StackPanel>
            <TextBlock Foreground="Red" Text="Warning" FontWeight="Bold"/>
            <TextBlock Foreground="Red" Text="When the game asks you 'Failed to read saved data for Monster Hunter World: Iceborne. Create new save data?' you should ALWAYS press NO. This happens when you don't enable the SaveCheckBypass. To fix this simply start this tool and press 'Enable SaveCheckBypass!'"/>
        </StackPanel>

        <StackPanel>
            <TextBlock Text="SaveCheckBypass" FontWeight="Bold"/>
            <TextBlock Text="You only need the SaveCheckBypass when launching the game for the first time after a change."/>
            <TextBlock Text="You can manually start the SaveCheckBypass by clicking on 'Enable SaveCheckBypass!' in the top right of your screen. You can also allow it to automatically start when you open this tool by clicking the checkbox below. You can always change this in the settings menu."/>
            <CheckBox Content="Automatically start SaveCheckBypass" Margin="0,5,0,0" IsChecked="{Binding Settings.AutoEnableSaveCheckBypass}"/>
        </StackPanel>

        <Button Content="Continue" Command="{Binding ContinueCommand}"/>
    </StackPanel>
</UserControl>
